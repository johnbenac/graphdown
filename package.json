{
  "name": "graphdown",
  "version": "0.0.0",
  "description": "Graphdown dataset validator.",
  "license": "MIT",
  "repository": "https://github.com/johnbenac/graphdown",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "graphdown": "dist/cli.js"
  },
  "files": [
    "dist/",
    "validateDataset.js",
    "README.md",
    "CHANGELOG.md"
  ],
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "postinstall": "npm --workspace apps/web run playwright:install",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run build && node --test",
    "build": "tsc && node scripts/add-shebang.js",
    "spec:trace": "node tools/spec-trace.cjs && npm run burndown --silent",
    "dev:web": "npm --workspace apps/web run dev -- --host 0.0.0.0 --port 5173",
    "build:web": "npm --workspace apps/web run build",
    "test:web": "npm --workspace apps/web run test",
    "test:web:e2e": "npm --workspace apps/web run test:e2e",
    "verify:web": "npm --workspace apps/web run verify",
    "burndown": "node tools/burndown.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^20.16.10",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "dependencies": {
    "fflate": "^0.8.2",
    "yaml": "^2.8.2"
  }
}
